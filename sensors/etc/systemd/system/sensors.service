[Unit]
Description=sensors

[Service]
User=root
WorkingDirectory=/opt/mdch
ExecStartPre=/bin/sh -c 'while [ $(ls /tmp/smartwatch.sock | wc -l) -lt 1 ]; do echo "/tmp/smartwatch.sock not found" && sleep 1; done'
ExecStart=/opt/mdch/bin/sensors

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
